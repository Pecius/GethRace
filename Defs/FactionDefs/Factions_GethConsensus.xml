<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- Geth Goodguy Faction -->
	<FactionDef Abstract="True" Name="GethFactionBase">
		<homeIconPath>World/WorldObjects/DefaultSettlement</homeIconPath>
		<colorSpectrum>
			<li>(1.0,1.0,1.0)</li>
		</colorSpectrum>
	</FactionDef>
	<FactionDef>
		<defName>GethConsensus</defName>
		<label>Geth</label>
		<description>Having travelled across the mysterious Perseus Veil, the Geth have landed on this rimworld.</description>
		<pawnSingular>geth</pawnSingular>
		<pawnsPlural>geth</pawnsPlural>
		<basicMemberKind>BaseGeth</basicMemberKind>
		<listOrderPriority>10</listOrderPriority>
		<settlementGenerationWeight>1</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<maxCountAtGameStart>1</maxCountAtGameStart>
		<canMakeRandomly>true</canMakeRandomly>
		<canSiege>true</canSiege>
		<canStageAttacks>true</canStageAttacks>
		<leaderTitle>Prime</leaderTitle>
		<hairTags>
			<li></li>
		</hairTags>
		<raidCommonalityFromPointsCurve>
			<points>
				<li>(0, 1)</li>
				<!--Constant 1 at all points levels-->
			</points>
		</raidCommonalityFromPointsCurve>
		<factionIconPath>World/GethBaseIcon</factionIconPath>
		<colorSpectrum>
			<li>(1.0, 1.0, 1.0)</li>
			<li>(1.0, 1.0, 1.0)</li>
		</colorSpectrum>
		<startingGoodwill>
			<min>0</min>
			<max>50</max>
		</startingGoodwill>
		<naturalColonyGoodwill>
			<min>-50</min>
			<max>50</max>
		</naturalColonyGoodwill>
		<goodwillDailyGain>0.20</goodwillDailyGain>
		<goodwillDailyFall>0.40</goodwillDailyFall>
		<visitorTraderKinds>
			<li>Visitor_Outlander_Standard</li>
		</visitorTraderKinds>
		<caravanTraderKinds>
			<li>Caravan_Outlander_BulkGoods</li>
			<li>Caravan_Outlander_CombatSupplier</li>
			<li>Caravan_Outlander_Exotic</li>
		</caravanTraderKinds>
		<permanentEnemy>false</permanentEnemy>
		<fixedName>Geth</fixedName>
		<techLevel>Spacer</techLevel>
		<backstoryFilters>
			<li>
				<categories>
					<li>GethTrooperBackstory</li>
					<li>GethHunterBackstory</li>
					<li>GethPlatformBackstory</li>
					<li>GethInfiltratorBackstory</li>
					<li>GethPyroBackstory</li>
					<li>GethRocketTrooperBackstory</li>
					<li>GethPrimeBackstory</li>
				</categories>
			</li>
		</backstoryFilters>
		<allowedArrivalTemperatureRange>-100~100</allowedArrivalTemperatureRange>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(700, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<pawnGroupMakers>
			<li>
				<!-- Normal fights, ranged with melee mix-ins -->
				<kindDef>Combat</kindDef>
				<commonality>100</commonality>
				<options>
					<BaseGethTrooper>250</BaseGethTrooper>
					<BaseGethHunter>50</BaseGethHunter>
					<BaseGethInfiltrator>50</BaseGethInfiltrator>
					<BaseGethPyro>50</BaseGethPyro>
					<BaseGethRocketTrooper>50</BaseGethRocketTrooper>
					<BaseGethPrime>40</BaseGethPrime>
				</options>
			</li>
			<li>
				<!-- Peaceful Geth -->
				<kindDef>Peaceful</kindDef>
				<options>
					<BaseGethTrooper>250</BaseGethTrooper>
					<BaseGethHunter>50</BaseGethHunter>
					<BaseGethInfiltrator>50</BaseGethInfiltrator>
					<BaseGethPyro>50</BaseGethPyro>
					<BaseGethRocketTrooper>50</BaseGethRocketTrooper>
					<BaseGethPrime>40</BaseGethPrime>
				</options>
			</li>
			<li>
				<!-- Trader Geth -->
				<kindDef>Trader</kindDef>
				<traders>
					<BaseTraderGeth>1</BaseTraderGeth>
				</traders>
				<carriers>
					<Muffalo>2</Muffalo>
					<Dromedary>2</Dromedary>
				</carriers>
				<guards>
					<BaseGethTrooper>250</BaseGethTrooper>
					<BaseGethHunter>50</BaseGethHunter>
					<BaseGethInfiltrator>50</BaseGethInfiltrator>
					<BaseGethPyro>50</BaseGethPyro>
					<BaseGethRocketTrooper>50</BaseGethRocketTrooper>
					<BaseGethPrime>40</BaseGethPrime>
				</guards>
			</li>
			<li>
				<!-- Base defense, mainly ranged with melee mix-ins -->
				<kindDef>Settlement</kindDef>
				<options>
					<BaseGeth>10</BaseGeth>
					<BaseGethTrooper>250</BaseGethTrooper>
					<BaseGethHunter>50</BaseGethHunter>
					<BaseGethInfiltrator>50</BaseGethInfiltrator>
					<BaseGethPyro>50</BaseGethPyro>
					<BaseGethRocketTrooper>50</BaseGethRocketTrooper>
					<BaseGethPrime>40</BaseGethPrime>
				</options>
			</li>
		</pawnGroupMakers>
		<settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
	</FactionDef>
</Defs>
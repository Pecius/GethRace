<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<FactionDef Abstract="True" Name="HereticGethFactionBase">
		<homeIconPath>World/WorldObjects/DefaultSettlement</homeIconPath>
		<colorSpectrum>
			<li>(1.0,1.0,1.0)</li>
		</colorSpectrum>
	</FactionDef>
	<FactionDef>
		<defName>HereticGeth</defName>
		<label>Geth Heretics</label>
		<description>Having travelled across the mysterious Perseus Veil, the Geth have landed on this rimworld, however these geth seek to destroy everyone.</description>
		<pawnSingular>geth</pawnSingular>
		<pawnsPlural>geth</pawnsPlural>
		<basicMemberKind>BaseHereticGeth</basicMemberKind>
		<listOrderPriority>10</listOrderPriority>
		<settlementGenerationWeight>1</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<maxCountAtGameStart>1</maxCountAtGameStart>
		<canMakeRandomly>true</canMakeRandomly>
		<canSiege>true</canSiege>
		<canStageAttacks>true</canStageAttacks>
		<leaderTitle>Prime</leaderTitle>
		<hairTags>
			<li></li>
		</hairTags>
		<raidCommonalityFromPointsCurve>
			<points>
				<li>(0, 1)</li>
				<!--Constant 1 at all points levels-->
			</points>
		</raidCommonalityFromPointsCurve>
		<factionIconPath>World/HereticGethBaseIcon</factionIconPath>
		<colorSpectrum>
			<li>(1.0, 1.0, 1.0)</li>
			<li>(1.0, 1.0, 1.0)</li>
		</colorSpectrum>
		<permanentEnemy>true</permanentEnemy>
		<fixedName>Geth Heretics</fixedName>
		<techLevel>Spacer</techLevel>
		<backstoryFilters>
			<li>
				<categories>
					<li>GethTrooperBackstory</li>
					<li>GethHunterBackstory</li>
					<li>GethPlatformBackstory</li>
					<li>GethInfiltratorBackstory</li>
					<li>GethPyroBackstory</li>
					<li>GethRocketTrooperBackstory</li>
					<li>GethJuggernautBackstory</li>
				</categories>
			</li>
		</backstoryFilters>
		<allowedArrivalTemperatureRange>-100~100</allowedArrivalTemperatureRange>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(700, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<pawnGroupMakers>
			<li>
				<!-- Normal fights, ranged with melee mix-ins -->
				<kindDef>Combat</kindDef>
				<commonality>100</commonality>
				<options>
					<BaseHereticGethTrooper>250</BaseHereticGethTrooper>
					<BaseHereticGethHunter>50</BaseHereticGethHunter>
					<BaseHereticGethInfiltrator>50</BaseHereticGethInfiltrator>
					<BaseHereticGethPyro>50</BaseHereticGethPyro>
					<BaseHereticGethRocketTrooper>50</BaseHereticGethRocketTrooper>
					<BaseHereticGethJuggernaut>40</BaseHereticGethJuggernaut>
				</options>
			</li>
			<li>
				<!-- Base defense, mainly ranged with melee mix-ins -->
				<kindDef>Settlement</kindDef>
				<options>
					<BaseHereticGeth>10</BaseHereticGeth>
					<BaseHereticGethTrooper>250</BaseHereticGethTrooper>
					<BaseHereticGethHunter>50</BaseHereticGethHunter>
					<BaseHereticGethInfiltrator>50</BaseHereticGethInfiltrator>
					<BaseHereticGethPyro>50</BaseHereticGethPyro>
					<BaseHereticGethRocketTrooper>50</BaseHereticGethRocketTrooper>
					<BaseHereticGethJuggernaut>40</BaseHereticGethJuggernaut>
				</options>
			</li>
		</pawnGroupMakers>
		<settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
	</FactionDef>
</Defs>
<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<HediffDef>
		<defName>GethLink</defName>
		<label>geth link state</label>
		<description>Links Geth together to improve efficiency.</description>
		<defaultLabelColor>(0.436, 0.499, 0.635)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1</initialSeverity>
		<isBad>false</isBad>
		<makesAlert>false</makesAlert>
		<everCurableByItem>false</everCurableByItem>
		<stages>
			<li>
				<minSeverity>1</minSeverity>
				<label>1</label>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<postFactor>1.1</postFactor>
					</li>
				</capMods>
				<statFactors>
					<AimingDelayFactor>0.9</AimingDelayFactor>
					<ShootingAccuracyPawn>1.1</ShootingAccuracyPawn>
				</statFactors>
			</li>
			<li>
				<minSeverity>2</minSeverity>
				<label>2</label>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<postFactor>1.2</postFactor>
					</li>
				</capMods>
				<statFactors>
					<AimingDelayFactor>0.8</AimingDelayFactor>
					<ShootingAccuracyPawn>1.2</ShootingAccuracyPawn>
				</statFactors>
			</li>
			<li>
				<minSeverity>3</minSeverity>
				<label>3</label>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<postFactor>1.3</postFactor>
					</li>
				</capMods>
				<statFactors>
					<AimingDelayFactor>0.7</AimingDelayFactor>
					<ShootingAccuracyPawn>1.3</ShootingAccuracyPawn>
				</statFactors>
			</li>
			<li>
				<minSeverity>4</minSeverity>
				<label>4</label>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<postFactor>1.4</postFactor>
					</li>
				</capMods>
				<statFactors>
					<AimingDelayFactor>0.6</AimingDelayFactor>
					<ShootingAccuracyPawn>1.4</ShootingAccuracyPawn>
				</statFactors>
			</li>
		</stages>
	</HediffDef>
	<HediffDef>
		<defName>GethOverheat</defName>
		<label>overheating</label>
		<description>This unit has overheated, if not cooled down soon it will break down.</description>
		<defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
		<taleOnVisible>HeatstrokeRevealed</taleOnVisible>
		<maxSeverity>0.62</maxSeverity>
		<stages>
			<li>
				<label>initial</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<label>initial</label>
				<minSeverity>0.04</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.2</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>critical</label>
				<minSeverity>0.35</minSeverity>
				<painOffset>0.15</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.20</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>shutdown</label>
				<minSeverity>0.62</minSeverity>
				<lifeThreatening>true</lifeThreatening>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	<HediffDef>
		<defName>GethThermalShutdown</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>thermal shutdown</label>
		<description>This unit has overheated. It will take some time to cool and reboot.</description>
		<defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="HediffCompProperties_SelfHeal">
				<healIntervalTicksStanding>72</healIntervalTicksStanding>
				<healAmount>0.01</healAmount>
			</li>
		</comps>
		<stages>
			<li>
				<label>recalibrating</label>
				<minSeverity>0</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>shutdown</label>
				<minSeverity>0.30</minSeverity>
				<lifeThreatening>true</lifeThreatening>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	<HediffDef>
		<defName>GethCoolantLeak</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>coolant leak</label>
		<description>This unit is leaking coolant, resulting in gradual heat accumulation.</description>
		<maxSeverity>1.0</maxSeverity>
		<tendable>true</tendable>
		<!--
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<showTendQuality>false</showTendQuality>
				<tendAllAtOnce>true</tendAllAtOnce>
				<disappearsAtTotalTendQuality>0.01</disappearsAtTotalTendQuality>
			</li>
		</comps>
		-->
		<stages>
			<li>
				<label>minor</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.15</minSeverity>
				<label>minor</label>
				<capMods>
					<li>
						<capacity>GethCoolingEfficiency</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.30</minSeverity>
				<label>moderate</label>
				<capMods>
					<li>
						<capacity>GethCoolingEfficiency</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.45</minSeverity>
				<label>severe</label>
				<capMods>
					<li>
						<capacity>GethCoolingEfficiency</capacity>
						<offset>-0.4</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.60</minSeverity>
				<label>severe</label>
				<capMods>
					<li>
						<capacity>GethCoolingEfficiency</capacity>
						<offset>-0.6</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.75</minSeverity>
				<label>extreme</label>
				<capMods>
					<li>
						<capacity>GethCoolingEfficiency</capacity>
						<offset>-0.8</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>1.0</minSeverity>
				<label>depleted</label>
				<totalBleedFactor>0.0</totalBleedFactor>
				<capMods>
					<li>
						<capacity>GethCoolingEfficiency</capacity>
						<setMax>0.01</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
</Defs>